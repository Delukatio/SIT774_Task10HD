<%- include('header'); -%>
<main>
    <br>
    <br>
    <div class="container">
        <p>These are the users currently registered within the database:</p>
        <table class="table">
            <thead>
                <tr>
                    <th>UserID</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Email</th>
                    <th>Points</th>
                </tr>
            </thead>
            <tbody>
                <% comments.forEach(comment => { %>
                    <tr>
                        <td><%= comment.id %></td>
                        <td><%= comment.username %></td>
                        <td><%= comment.password %></td>
                        <td><%= comment.email %></td>
                        <td><%= comment.points %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <div class="container">
        <p>These are currently these messages in the database:</p>
        <table class="table">
            <thead>
                <tr>
                    <th>FromUserId</th>
                    <th>ToUserId</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                <% messages.forEach(message => { %>
                    <tr>
                        <td><%= message.user1id %></td>
                        <td><%= message.user2id %></td>
                        <td><%= message.message %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</main>

<%- include('footer'); -%>
